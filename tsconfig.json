{
  "compilerOptions": {
    "target": "ES2022",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDirs": ["./src/core", "./src/node"],
    "declaration": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
  },
  "include": [
    "./src"
  ]
}
